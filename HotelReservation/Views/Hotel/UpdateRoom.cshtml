@model HotelReservation.ViewModels.UpdateRoomViewModel
<h3>Update Room</h3>

<div class="row col-md-4">
    <form asp-action="UpdateRoom" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mt-2">
            <label>Room Number</label>
            <input asp-for="RoomNumber" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>BedsNumber</label>
            <input asp-for="BedsNumber" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Price Per Night</label>
            <input asp-for="PricePerNight" class="form-control" />
        </div>

        <div class="form-group mt-2">
            <label >RoomPicture</label>
            <input asp-for="RoomPicture" class="form-control" type="file" />
        </div >
        <button type="submit" class="btn btn-primary mt-2">Update Room</button>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
