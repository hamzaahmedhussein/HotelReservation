@model HotelReservation.ViewModels.HotelRegistrationViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group mt-2">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword" class="form-control" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="HotelName"></label>
    <input asp-for="HotelName" class="form-control" />
    <span asp-validation-for="HotelName" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="City"></label>
    <input asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
</div>
<div class="form-group mt-2">
    <label asp-for="State"></label>
    <input asp-for="State" class="form-control" />
    <span asp-validation-for="State" class="text-danger"></span>
</div>

<button type="submit" class="btn btn-primary m-2">Register as Hotel</button>
