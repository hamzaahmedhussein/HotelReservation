@model HotelReservation.ViewModels.ResetPasswordViewModel

<div class="d-flex align-items-center justify-content-center p-5">
    <div class="card col-md-4 py-5 px-3 border-3 rounded-3">
        <h3 class="card-title text-center">Reset Password</h3>

        <div class="row card-body">
            <form asp-action="ResetPassword" method="post" class="col-md-12">
                <input type="hidden" asp-for="Email" />

                <div class="form-group">
                    <label for="token" class="control-label font-weight-bold">Reset Token</label>
                    <input asp-for="Token" type="hidden" class="form-control" required />
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="newPassword" class="control-label font-weight-bold">New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" required />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="confirmPassword" class="control-label font-weight-bold">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Reset Password" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>

        <div class="text-center">
            <a asp-action="Login">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
